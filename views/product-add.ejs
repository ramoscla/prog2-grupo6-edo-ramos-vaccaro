<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head.ejs") %>
<!-- Include Head -->

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado.ejs') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="contenedorFormulario">
				<form action="/product/add" method="post" class="formularios">

					<input type="hidden" name="usuarioId" value="<%= usuario.id %>">

					<label for="nombre">Nombre del producto:</label><br>
					<input type="text" id="nombre" name="nombre" required><br>
					<% if (locals.errors && errors.nombre) { %>
						<p class="feedback"><%= errors.nombre.msg %></p>
					<% } %>

					<label for="foto">Imagen del producto:</label><br>
					<input type="text" id="foto" name="foto" required><br>
					<% if (locals.errors && errors.foto) { %>
						<p class="feedback"><%= errors.foto.msg %></p>
					<% } %>

					<label for="descripcion">Descripci√≥n:</label><br>
					<textarea id="descripcion" name="descripcion" required></textarea><br>
					<% if (locals.errors && errors.descripcion) { %>
						<p class="feedback"><%= errors.descripcion.msg %></p>
					<% } %>
					<input type="submit" value="Agregar producto">

				</form>
			</div>
	<!-- Novedades -->
	
	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->

</body>

</html>