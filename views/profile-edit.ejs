<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("./partials/head.ejs") %>
<!-- Include Head -->

<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado.ejs") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
			<form method="post" action="/users/profile/edit" class="formularios">

				<label for="nombre">Nombre de usuario:</label><br>
				<input type="text" id="usuario" name="usuario" value="<%= usuario.usuario %>"><br>
				<% if (locals.errors && errors.usuario) { %>
					<p class="feedback"><%= errors.usuario.msg %></p>
				<% } %>		

				<label for="mail">Mail:</label><br>
				<input type="email" id="email" name="email" value="<%= usuario.email %>"><br>
				<% if (locals.errors && errors.email) { %>
					<p class="feedback"><%= errors.email.msg %></p>
				<% } %>		

				<label for="contrasenia">Contrase√±a:</label><br>
				<input type="password" id="contrasenia" name="contrasenia" ><br>
				<% if (locals.errors && errors.contrasenia) { %>
					<p class="feedback"><%= errors.contrasenia.msg %></p>
				<% } %>		

				<label for="fechaNacimiento">Fecha de nacimiento:</label><br>
				<input type="date" id="fechaNacimiento" name="fechaNacimiento" value="<%= usuario.fechaNacimiento %>"><br>

				<label for="DNI">Numero de documento:</label><br>
				<input type="number" id="DNI" name="DNI" value="<%= usuario.DNI %>"><br>

				<label for="foto">Foto de perfil:</label><br>
				<input type="file" id="foto" name="foto" value="<%= usuario.foto %>"><br>

				<input type="submit" value="Confirmar cambios">

			</form>
			</h2>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>