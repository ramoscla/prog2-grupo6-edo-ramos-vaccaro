<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head.ejs") %>

<body>
	<!-- Header -->
	<%- include("./partials/header.ejs") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let index = 0; index < 8; index++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product">
							<figure class="product-box_image">
									<img class="fotoIndex" src= "/images/products/<%= productos[index].foto %>">
							<article class="product-box_data">
								<h2><%= productos[index].nombre %></h2>
								<p><%= productos[index].descripcion %></p>
								<p>Comentarios: <%= productos[index].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<%}%>

		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>